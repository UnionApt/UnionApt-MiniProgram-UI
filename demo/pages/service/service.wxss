/* pages/service/service.wxss */

.top-container {
  width: 100%;
  height: 200rpx;
}

.background {
  width: 100%;
}

.top-bar {
  background: linear-gradient(170deg, #5672c6, #5372c4, #6671d2);
  width: 100%;
  height: 110rpx;
  position: fixed;
  top: 0rpx;
  display: flex;
  justify-content: center;
  box-shadow: 0px 1px4px1px rgba(202, 202, 202, 0.5);
  z-index: 1;
}

.union-icon-view {
  position: absolute;
  width: 100%;
  top: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.union-icon {
  width: 120rpx;
  height: 120rpx;
}

.service-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-view {
  width:85%;
}

.service-title-large {
  color: #ffffff;
  font-family: "PingFangSC-Medium";
  font-size: 36px;
  font-weight: 400;
  line-height: 46px;
}

.service-title-small {
  color: #ffffff;
  font-family: "PingFangSC-Medium";
  font-size: 20px;
  font-weight: 400;
  line-height: 46px;
  margin-left: 30rpx;
}

.service-lunch {
  width: 100%;
  box-shadow: 0px 2px 3px 2px rgba(150, 150, 150, 0.5);
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
}

.service-item {
  width: 100%;
  box-shadow: 0px 2px 3px 2px rgba(150, 150, 150, 0.5);
  border-radius: 20rpx;
  margin-bottom: 50rpx;
}
