/* pages/fix/fix.wxss */

.top-img {
  width: 100%;
}

.fix-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.fix-background {
  width: 85%;
}

.title {
  color: #363636;
  font-family: "PingFangSC-Medium";
  font-size: 24px;
  font-weight: 400;
  line-height: 30px;
}

.sub-title {
  color: #363636;
  font-family: "Microsoft YaHei";
  font-size: 18px;
  font-weight: 290;
  line-height: 24px;
}

.fix-intro-background {
  width: 100%;
  box-shadow: 0px 2px 3px 2px rgba(150, 150, 150, 0.5);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.fix-intro-text {
  color: #5a5a5a;
  font-family: "Microsoft YaHei";
  font-size: 16px;
  font-weight: 290;
  line-height: 21px;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.sub-intro-view {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-top: 50rpx;
}

.sub-intro-img {
  width: 30%;
}

.bottom-btn {
  background: #c46a6a;
  color: #fff;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  border-radius: 0;
}

.bottom-btn::after {
  border-radius: 0;
}
