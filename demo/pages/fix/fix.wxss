/* pages/fix/fix.wxss */

.top-img {
  width: 100%;
}

.fix-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 200rpx;
}

.fix-background {
  width: 85%;
}

.title {
  color: #363636;
  font-family: "PingFangSC-Medium";
  font-size: 28px;
  font-weight: 500;
  line-height: 30px;
}

.fix-intro-background {
  width: 100%;
  box-shadow: 0px 2px 4px rgba(150,150,150,0.5);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.fix-intro-text {
  color: #5a5a5a;
  font-family: "Microsoft YaHei";
  font-size: 16px;
  font-weight: 290;
  line-height: 26px;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.sub-intro-view {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-top: 50rpx;
}

.sub-intro-img {
  width: 30%;
}

.bottom-btn {
  background: #c46a6a;
  color: #fff;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  border-radius: 0;
}

.bottom-btn::after {
  border-radius: 0;
}
