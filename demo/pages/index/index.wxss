.top-container {
  width: 100%;
  height: 950rpx;
}

.top-bar {
  background: linear-gradient(90deg, #ffc21d, #ffb622, #ffab04);
  width: 100%;
  height: 110rpx;
  position: fixed;
  top: 0rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0px 1px4px1px rgba(202, 202, 202, 0.5);
  z-index: 1;
}

.slogan-view {
  position: absolute;
  top: 180rpx;
  left: 30%;
  right: 30%;
  width: 40%;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.slogan {
  color: #fff;
  font-family: "PingFangSC-Regular";
  font-size: 43rpx;
  font-weight: 400;
  line-height: 25px;
  margin-bottom: 40rpx;
}

.slogan-sub {
  color: #fff;
  font-family: "PingFangSC-Regular";
  font-size: 24rpx;
  font-weight: 400;
  line-height: 14px;
}

.banner-background {
  width: 100%;
  height: 620rpx;
}

.banner-swiper {
  position: absolute;
  top: 330rpx;
  height: 600rpx;
  width: 100%;
}

.banner-image {
  height: 70%;
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  opacity: 0.95;
}

.banner-text {
  color: #818181;
  font-family: "PingFangSC-Medium";
  font-size: 13px;
  font-weight: 400;
}

.banner-image-container {
  height: 88%;
  width: 76%;
  text-align: right;
}

swiper-item {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.house-list-title {
  display: flex;
  flex-direction: row;
}

.list-title {
  padding: 20rpx;
  position: relative;
}

.title-left {
  flex: 1; /* 重要 */
  align-items: center;
}

.title-right {
  position: relative;
  align-items: center;
}

.location {
  color: #bababa;
  font-family: "PingFangSC-Medium";
  font-size: 16px;
  font-weight: 400;
  line-height: 23px;
  margin-left: 10rpx;
}

.view-more {
  font-family: "PingFangSC-Medium";
  font-size: 12px;
  font-weight: 400;
  color: #a0a0a0;
}

.house-image {
  height: 65%;
  width: 100%;
  margin-bottom: 25rpx;
  border-radius: 30rpx;
  opacity: 0.75;
  box-shadow: 0px 2px 3px 2px rgba(150, 150, 150, 0.5);
}

.house-text-location {
  color: #b8b6b6;
  font-family: "Microsoft YaHei";
  font-size: 10px;
  font-weight: 500;
  line-height: 11px;
  letter-spacing: 1px;
  margin-bottom: 10rpx;
}

.house-text-type-price {
  color: #5c5c5c;
  font-family: "SFProDisplay-Regular";
  font-size: 10px;
  font-weight: 400;
  line-height: 10px;
  letter-spacing: 0.5px;
}

.house-image-view {
  height: 100%;
  width: 100%;
  text-align: left;
  display: flex;
  flex-direction: column;
}

.house-image-container {
  height: 450rpx;
  width: 230rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: inline-block;
}

.house-scroll-view {
  width: 100%;
  height: 390rpx;
  white-space: nowrap;
  display: flex;
}

.region {
  width: 170rpx;
  display: flex;
  align-items: center;
  padding: 0 25rpx;
}

.region-text {
  color: #fff;
  font-family: "Microsoft YaHei";
  font-size: 16px;
  font-weight: 290;
  line-height: 21px;
  letter-spacing: 1.15px;
}

.region-arrow {
  width: 40rpx;
  height: 30rpx;
  display: block;
  opacity: 0.6;
}

.union-icon {
  width: 120rpx;
  height: 120rpx;
}

.appointment-text-view {
  width: 215rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.appointment-text {
  color: #fff;
  font-family: "Microsoft YaHei";
  font-size: 16px;
  font-weight: 290;
  line-height: 21px;
  letter-spacing: 1.15px;
}

.news {
  color: #bababa;
  font-family: "PingFangSC-Medium";
  font-size: 16px;
  font-weight: 400;
  line-height: 23px;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}

.news-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.news-view {
  width: 90%;
  height: 520rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.news-time {
  color: #b6b6b6;
  font-family: "Microsoft YaHei";
  font-size: 20rpx;
  font-weight: 290;
  line-height: 11px;
  letter-spacing: 1px;
  margin-bottom: 20rpx;
}

.news-item-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0px 2px 3px 2px rgba(150, 150, 150, 0.5);
  border-radius: 10rpx;
}

.news-img {
  width: 100%;
  height: 270rpx;
  opacity: 0.95;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.news-item-text-view {
  width: 90%;
  display: flex;
  flex-direction: column;
}

.news-title-text {
  font-family: "SFProDisplay-Medium";
  font-size: 16px;
  font-weight: 600;
  color: #363636;
  margin-bottom: 20rpx;
}

.news-sub-title-text {
  font-family: "SFProDisplay-Medium";
  font-size: 13px;
  font-weight: 500;
  color: #a7a1a1;
  margin-bottom: 20rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.weui-animate-fade-in {
  animation: fadeIn ease 3s forwards;
}
