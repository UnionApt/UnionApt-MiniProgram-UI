.banner-background {
  width: 100%;
  height: 620rpx;
}

.QR-container {
  margin-top: -300rpx;
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.QR-background {
  width: 500rpx;
  height: 500rpx;
  background-color: #fff;
  box-shadow: 0px 2px 4px rgba(171, 171, 171, 0.5);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.QR {
  width: 400rpx;
  height: 400rpx;
}

.QR-message {
  position: absolute;
  margin-top: 350rpx;
  color: #818181;
  font-family: "PingFangSC-Medium";
  font-size: 15px;
  font-weight: 400;
  line-height: 25px;
}

.union-icon {
  position: absolute;
  left: 35%;
  right: 35%;
  width: 30%;
  top: 50rpx;
}
