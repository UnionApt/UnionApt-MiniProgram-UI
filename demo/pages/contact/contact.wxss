.banner-background {
  width: 100%;
  height: 620rpx;
}

.QR-container {
  margin-top: -300rpx;
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.QR-background {
  width: 500rpx;
  height: 500rpx;
  background-color: #fff;
  box-shadow: 0px 2px 4px rgba(171, 171, 171, 0.5);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.QR {
  width: 490rpx;
  height: 490rpx;
}

.QR-message {
  position: absolute;
  margin-top: 350rpx;
  color: #818181;
  font-family: "PingFangSC-Medium";
  font-size: 15px;
  font-weight: 400;
  line-height: 25px;
}

.slogan-view {
  position: absolute;
  top: 140rpx;
  left: 30%;
  right: 30%;
  width: 40%;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.slogan {
  color: #fff;
  font-family: "PingFangSC-Regular";
  font-size: 43rpx;
  font-weight: 400;
  line-height: 25px;
  margin-bottom: 40rpx;
}

.slogan-sub {
  color: #fff;
  font-family: "PingFangSC-Regular";
  font-size: 24rpx;
  font-weight: 400;
  line-height: 14px;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.weui-animate-fade-in {
  animation: fadeIn ease 3s forwards;
}

.union-icon {
  position: fixed;
  top: 0rpx;
  width: 120rpx;
  height: 120rpx;
}
