/* pages/fix_rule/fix_rule.wxss */

.rule-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 200rpx;
}

.title {
  color: #111;
  font-family: "PingFangSC-Medium";
  font-size: 27px;
  font-weight: 400;
  line-height: 34px;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.rule-view-background {
  width: 80%;
}

.rule {
  color: #5e5e5e;
  font-family: "Microsoft YaHei";
  font-size: 14px;
  font-weight: 290;
  line-height: 30px;
  letter-spacing: 0.5px;
}

.bottom-btn {
  background: #c46a6a;
  color: #fff;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  border-radius: 0;
}

.bottom-btn::after {
  border-radius: 0;
}
