<!--pages/activity/activity.wxml-->
<view class="top-container">
  <image class="background" mode="widthFix" src="../../resources/images/banner/bannerActivity.png"></image>
  <view class="union-icon-view">
    <image class="union-icon" src="../../resources/images/logo/logo.png"></image>
  </view>
  <swiper autoplay="True" class="banner-swiper" indicator-dots="True" interval="5000" indicator-color="#C8C8C8" indicator-active-color="#979797" previous-margin='50px' next-margin='50px'>
    <swiper-item>
      <view class="banner-image-container">
        <image class="banner-image" mode="aspectFill" src="../../resources/images/tmp/upcomingevent01.png" />
        <text class="banner-text-sign-up">点击报名</text>
        <text class="banner-text-intro">"去你妈的光棍节"</text>
      </view>
    </swiper-item>
    <swiper-item>
      <view class="banner-image-container">
        <image class="banner-image" mode="aspectFill" src="../../resources/images/tmp/upcomingevent02.png" />
