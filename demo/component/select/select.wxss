.com-selectBox {
  width: 600rpx;
}

.com-sContent {
  border: 1px solid lightgray;
  background: white;
  font-size: 16px;
  position: relative;
  height: 60rpx;
  line-height: 30px;
  border-radius: 10px;
}

.com-sImg {
  position: absolute;
  right: 10px;
  top: 11px;
  width: 16px;
  height: 9px;
  transition: all 0.3s ease;
}

.com-sTxt {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 20px 0 6px;
  color: #5e5e5e;
  font-family: "Microsoft YaHei";
  font-size: 15px;
  font-weight: 290;
  letter-spacing: 0.9px;
  line-height: 60rpx;
}

.com-sList {
  background: white;
  width: inherit;
  position: absolute;
  border: 1px solid lightgray;
  border-top: none;
  box-sizing: border-box;
  z-index: 3;
  max-height: 120px;
  overflow: auto;
}

.com-sItem {
  height: 30px;
  border-top: 1px solid lightgray;
  padding: 0 6px;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #5e5e5e;
  font-family: "Microsoft YaHei";
  font-size: 15px;
  font-weight: 290;
  letter-spacing: 0.9px;
  line-height: 60rpx;
}

.com-sItem:first-child {
  border-top: none;
}
